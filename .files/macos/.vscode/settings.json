{
  // Custom
  // ================================================================

  // Hide files/folders from Explorer
  "files.exclude": {
    // Custom

    // General
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/*.egg-info": true
  },

  // Do not search in these folders
  "search.exclude": {
    "**/.git": true,
    "**/hub33k-notes": true
  },

  // Editor
  // ================================================================

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": true,
  "editor.minimap.autohide": "mouseover",
  "editor.inlayHints.enabled": "off",
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.stickyScroll.enabled": false, // debug: slow vim

  // https://biomejs.dev/reference/vscode/
  // https://biomejs.dev/guides/editors/first-party-extensions/#vs-code
  "editor.codeActionsOnSave": {
    // "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  },

  // Explorer
  // ================================================================

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    ".npmrc": ".nvmrc, .yarnrc.yml",
    ".gitignore": ".eslintignore, .prettierignore",
    "README.md": "CONTRIBUTING.md, CODE_OF_CONDUCT.md, SECURITY.md",
    "Cargo.toml": "Cargo.lock",
    ".eslintrc.js": ".eslintcache",
    "package.json": "bun.lock, package-lock.json, yarn.lock, pnpm-lock.yaml, pnpm-workspace.yaml, .pnp.cjs, .pnp.loader.mjs",
    "pyproject.toml": ".python-version, uv.lock",
    "tsconfig.json": "tsconfig.*.json"
  },

  // Workbench
  // ================================================================

  "workbench.list.smoothScrolling": true,
  "workbench.tree.enableStickyScroll": false,

  // https://www.linkedin.com/feed/update/urn:li:activity:7176578334808502273/
  "workbench.editor.customLabels.enabled": true,
  "workbench.editor.customLabels.patterns": {
    // Python
    "**/__init__.py": "${dirname}.init.py",

    // TypeScript
    "**/index.ts": "${dirname}.index.ts",
    // Svelte routes
    // "**/routes/**/+page.svelte": "${dirname(1)}/${dirname}",
    // "**/routes/**/+page.server.ts": "/${dirname} [server]",
    // Next.js app routes
    "**/app/**/route.ts": "${dirname}.route.${extname}",
    "**/app/**/page.tsx": "${dirname}.${extname}",
    "**/app/**/layout.tsx": "${dirname}/layout.${extname}"
  },

  // Misc
  // ================================================================

  "window.zoomLevel": -1,

  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 16,

  "telemetry.feedback.enabled": false,

  // Languages
  // ================================================================

  "[json][jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "[typescript][typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },

  // Extensions
  // ================================================================

  "prettier.configPath": ".prettierrc.cjs",

  "typescript.experimental.useTsgo": true,

  "codeium.enableCodeLens": false,
  "codeium.enableConfig": {
    // "wgsl": true
  }
}
